<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="132dp"
        android:layout_marginTop="50dp">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="start|bottom"
            android:layout_margin="5dp"
            android:background="@color/gray"
            app:cardCornerRadius="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:contentDescription="@string/upload"
                android:src="@drawable/ic__213475"
                app:tint="@color/black" />

        </com.google.android.material.card.MaterialCardView>



        <com.google.android.material.card.MaterialCardView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:clickable="true"
            android:focusable="true"
            app:strokeColor="@color/blue"
            app:strokeWidth="2dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="0dp">


            <ImageView
                android:id="@+id/user_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/user_image"
                android:scaleType="centerCrop"
                android:background="@color/blue"
                android:src="@drawable/ic_user_profile" />

        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="170dp"
        android:background="@drawable/custom_shape"
        android:backgroundTint="@color/blue"
        android:orientation="vertical"
        tools:ignore="UselessParent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:orientation="vertical">

            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginEnd="10dp"
                app:neumorph_backgroundColor="@color/gray"
                app:neumorph_shadowColorDark="@color/border"
                app:neumorph_shadowColorLight="@color/border"
                app:neumorph_shadowElevation="6dp"
                app:neumorph_shapeType="pressed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:autofillHints=""
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:hint="Your Name"
                        android:inputType="textEmailAddress"
                        android:padding="14dp"
                        android:paddingEnd="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/shadow_color_text"
                        app:neumorph_shadowColorDark="@color/border"
                        app:neumorph_shadowColorLight="@color/border"
                        app:neumorph_shadowElevation="6dp" />
                </LinearLayout>

            </soup.neumorphism.NeumorphCardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="vertical">

            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginEnd="10dp"
                app:neumorph_backgroundColor="@color/gray"
                app:neumorph_shadowColorDark="@color/border"
                app:neumorph_shadowColorLight="@color/border"
                app:neumorph_shadowElevation="6dp"
                app:neumorph_shapeType="pressed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:autofillHints=""
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:hint="Your E-mail"
                        android:inputType="textEmailAddress"
                        android:padding="14dp"
                        android:paddingEnd="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/shadow_color_text"
                        app:neumorph_shadowColorDark="@color/border"
                        app:neumorph_shadowColorLight="@color/border"
                        app:neumorph_shadowElevation="6dp" />
                </LinearLayout>

            </soup.neumorphism.NeumorphCardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="vertical">

            <soup.neumorphism.NeumorphCardView
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:neumorph_backgroundColor="@color/gray"
                app:neumorph_shadowColorDark="@color/border"
                app:neumorph_shadowColorLight="@color/border"
                app:neumorph_shadowElevation="6dp"
                app:neumorph_shapeType="pressed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="+962"
                        android:textColorHint="@color/shadow_color_text"
                        android:textSize="18sp" />


                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autofillHints=""
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:hint="Your Phone"
                        android:inputType="textEmailAddress"
                        android:padding="15dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/shadow_color_text"
                        app:neumorph_shadowColorDark="@color/border"
                        app:neumorph_shadowColorLight="@color/border"
                        app:neumorph_shadowElevation="6dp" />

                </LinearLayout>

            </soup.neumorphism.NeumorphCardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <soup.neumorphism.NeumorphButton
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:text="@string/update"
                    android:textColor="@color/signupBtnTxt"
                    android:textSize="16sp"
                    app:neumorph_backgroundColor="@color/signupBtn"
                    app:neumorph_lightSource="leftTop"
                    app:neumorph_shadowColorDark="@color/border"
                    app:neumorph_shadowColorLight="@color/border"
                    app:neumorph_shadowElevation="3dp" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>





