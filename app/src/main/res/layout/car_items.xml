<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_card"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:layout_margin="5dp"
    app:cardElevation="5dp">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >


        <ImageView
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/white_rounded_rectangle"
            android:src="@drawable/mycarounded" />


        <TextView
            android:id="@+id/whiteMyCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="108dp"
            android:gravity="center"
            android:text="@string/_35_98634"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/carModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:gravity="center"
        android:text="@string/kia_sportage_2022"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:layout_marginTop="128dp"
        android:textSize="12sp"
        tools:ignore="RtlCompat" />


        <ImageView
            android:id="@+id/editCar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="115dp"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/white_rounded_rectangle"
            android:src="@drawable/wedit"
            android:clickable="true"
            android:focusable="true"
            />


    <ImageView
        android:id="@+id/deleteCar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:contentDescription="@string/white_rounded_rectangle"
        android:layout_marginTop="115dp"
        android:layout_marginStart="270dp"
        android:src="@drawable/delete"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:focusable="true"

        />


</RelativeLayout>

</com.google.android.material.card.MaterialCardView>